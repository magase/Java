package ej3;

import java.io.*;

public class Metodos_ej3 {

	
	public void invertirArchivo() {
	
		try {
			FileReader entrada = new FileReader("C:\\Users\\ram\\Desktop\\leyendo_creando\\texto.txt");
			
			int c = entrada.read();
			
			while(c!=1) {
		
				char letra=(char)c;
				System.out.println(letra);
				c=entrada.read();
				
			}
			
			entrada.close();
			
		} catch (Exception e) {
			
			e.printStackTrace();
		}
		
	}
	
	
}
