package ej5;

import java.io.*;
import java.util.*;

public class Metodos_ej5 {

	public void estadistica () {
		ArrayList<Character > lista = new ArrayList<Character>();
		
		try {
			FileReader entrada = new FileReader("C:\\Users\\ram\\Desktop\\leyendo_creando\\numeros.txt");
			
			int c = entrada.read();
			
			while(c != -1) {
				char  numero = (char)c;
				
				
				
				c=entrada.read();
				if (numero  != ' ') {
					lista.add(numero);
					//System.out.print(numero);
				}
				
			}
			
			int contador = 0;
			int posicion;
			 for (int i = 0; i < lista.size(); i++) {
			     for (int j = 0 ; j < lista.size(); j++) {
			         if(lista.get(i) == lista.get(j)) {
			        	 contador++;
			        	 posicion = lista.get(i); 
			        	 
			         }
			             
			     }
			     for (posicion = 0; posicion < lista.size(); posicion++) {
			     System.out.println(posicion + " Se repite " + contador + ",");
			     contador = 0;
			     }
			 }
			
			
			
			entrada.close();
		}catch(Exception e) {
			
			e.getClass();
		}
		
		
		
		 
		 
		 
		 
		 
		 
		 
	}
	
	
}
